<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        

    
                 
                            
                                                                                 

                                                                                          
                                          

           

    <LinearLayout
                                                   
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" android:tag="layout/item_fragment_local_music_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:tag="binding_1"                                          
                                                                               
                    android:id="@+id/tv_item_fragment_local_music_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1"
                    android:textColor="#91ffffff"
                    android:textSize="18sp" />

                <com.chen.larkplayer.widget.EqualizerView
                    android:tag="binding_2"                                          
                    android:id="@+id/ev_item_fragment_local_music_list_view"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    app:foregroundColor="@color/sk_stress_color" />
            </FrameLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:tag="binding_3"                           
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/tv_item_fragment_local_music_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Shake It Off"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />

                <TextView
                    android:tag="binding_4"              
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/tv_item_fragment_local_music_list_desc"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Theme Park - Love Story - 5:30"
                    android:textColor="#ff777777"
                    android:textSize="12sp" />

            </LinearLayout>


            <ImageView
                android:tag="binding_5"                    
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:id="@+id/iv_item_fragment_local_music_list_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_video_heart" />

            <ImageView
                android:tag="binding_6"                    
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_item_fragment_local_music_list_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_video_share" />

            <ImageView
                android:tag="binding_7"                    
                android:id="@+id/iv_item_fragment_local_music_list_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_right_more" />
        </LinearLayout>


        <View
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444" />


    </LinearLayout>
         