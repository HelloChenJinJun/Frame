<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        

    
                 
                            
                                                                           

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" android:tag="layout/item_fragment_library_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">


        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/rl_item_fragment_library_image_container"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageView
                android:tag="binding_1"                      
                android:id="@+id/iv_item_fragment_library_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <ImageView
                android:tag="binding_2"                         
                android:id="@+id/iv_item_fragment_library_icon"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/ic_heart" />

        </RelativeLayout>


        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rl_item_fragment_library_image_container"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:tag="binding_3"                           
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_item_fragment_library_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Favorites"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <TextView
                android:tag="binding_4"                   
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_item_fragment_library_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12 songs"
                android:textColor="#ff777777"
                android:textSize="14sp" />

        </LinearLayout>


    </RelativeLayout>
         