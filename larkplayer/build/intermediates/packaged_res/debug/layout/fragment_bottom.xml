<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                 
                            
                                                                     

           

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/fragment_bottom_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">


        <LinearLayout
            android:tag="binding_1"                
            android:id="@+id/ll_fragment_bottom_bottom_container"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <com.chen.larkplayer.widget.RoundAngleImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/iv_fragment_bottom_image" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fragment_bottom_title"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="The House Music.mp3"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />

                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/tv_fragment_bottom_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Smart Artist"
                    android:textColor="#ffaaaaaa"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:tag="binding_2"                
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_fragment_bottom_favorite"
                app:srcCompat="@drawable/ic_video_hearted" />

            <ImageView
                android:tag="binding_3"                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/iv_fragment_bottom_play"
                app:srcCompat="@drawable/ic_pause_black" />

            <ImageView
                android:tag="binding_4"                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_fragment_bottom_next"
                app:srcCompat="@drawable/ic_play_next_black" />
        </LinearLayout>

        <SeekBar
            android:thumb="@drawable/seek_thumb"
            android:max="100"
            android:id="@+id/sb_fragment_bottom_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:maxHeight="1.5dp"
            android:minHeight="1.5dp"
            android:progressDrawable="@drawable/seek_progress" />
    </RelativeLayout>
         