    <androidx.cardview.widget.CardView
                                                   
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/item_fragment_local_album_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:tag="binding_1"                        
                android:scaleType="centerCrop"
                android:id="@+id/iv_item_Fragment_local_album_list_cover"
                android:layout_width="match_parent"
                android:layout_height="103dp" />

            <TextView
                android:tag="binding_2"                            
                android:background="@color/sk_list_item_subtitle"
                android:gravity="center"
                android:id="@+id/tv_item_fragment_local_album_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                tools:text="Hip-hop Word in.." />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
         